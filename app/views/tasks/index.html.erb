<!DOCTYPE html>
<html>
<head>
  <!-- Your head content goes here -->
  <%= link_to "Home", root_path %>
  <% if user_signed_in? %>
      <%= link_to 'Logout', destroy_user_session_path, method: :delete %>
    <% else %>
      <!-- Your other content for signed-out users goes here -->
    <% end %>
  <h1>Task Manager</h1>
</head>
<body>
  <div>
    <%= form_tag(tasks_path, method: "get", class: "form-inline my-2 my-lg-0") do %>
    <%= text_field_tag :search, params[:search], class: "form-control mr-sm-2", placeholder: "Search" %>
    <%= submit_tag "Search", class: "btn btn-outline-success my-2 my-sm-0" %>
    <% end %>
  </div>
  <div>
    <%= link_to "Complete Tasks", complete_tasks_path, class: "task-links" %>
    <%= link_to "In progress Tasks", inprogress_tasks_path, class: "task-links"%>
    <%= link_to "To do Tasks", todo_tasks_path, class: "task-links"%>
  </div>
 
  <h2>Tasks</h2>
  <ul>
    <% @tasks.each do |task| %>
      <li>
        <%= link_to task.title, task %>
      </li>
    <% end %>
  </ul>
  <div>
    <%= link_to "New Task", new_task_path, class: "bottom-task" %>
    <%= paginate @tasks, class: "bottom-task" %>
   </div>
</body>
</html>
