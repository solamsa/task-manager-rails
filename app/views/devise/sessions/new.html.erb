<h2 class="p-3 mb-2 bg-primary text-white">Login </h2>
<%= form_for(resource, as: resource_name, url: session_path(resource_name) ,html: { class: "was-validated" }) do |f| %>
  <div class="col-sm-3 my-1">
    <%= f.label :email ,class:"sr-only"%><br />
    <div class="input-group">
      <div class="input-group-prepend">
        <div class="input-group-text">@</div>
      </div>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" ,class:"form-control", placeholder: "Email",required: true%>
      <div class="valid-feedback">Valid.</div>
      <div class="invalid-feedback">Please fill in your email.</div>
    </div>
  </div>

  <div class="col-sm-3 my-1">
    <%= f.label :password, class:"sr-only"%><br />
    <%= f.password_field :password, autocomplete: "current-password", class:"form-control", placeholder:"Password", required:true %>
    <div class="invalid-feedback">Please fill in your password.</div>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="col-auto my-1">
      <div class="form-check">
      <%= f.check_box :remember_me ,class:"form-check-input", type:"checkbox"%>
      <%= f.label :remember_me ,class: "form-check-label" %>
      </div>
    </div>
  <% end %>

   <div class="col-auto my-1">
    <%= f.submit "Log in", class:"btn btn-primary" %>
  </div>
<% end %>

<div class="col-auto my-1">
  <%= render "devise/shared/links" %>
</div>
