<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="col-sm-3 my-1">
    <%= f.label :email ,class:"sr-only", for:"inlineFormInputGroupUsername"%><br />
    <div class="input-group">
      <div class="input-group-prepend">
        <div class="input-group-text">@</div>
      </div>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" ,class:"form-control", id:"inlineFormInputGroupUsername", placeholder: "Email"%>
    </div>
  </div>

  <div class="col-sm-3 my-1">
    <%= f.label :password, class:"sr-only", for:"inlineFormInputName"%><br />
    <%= f.password_field :password, autocomplete: "current-password", class:"form-control", id:"inlineFormInputName", placeholder:"Password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="col-auto my-1">
      <div class="form-check">
      <%= f.check_box :remember_me ,class:"form-check-input", type:"checkbox", id: "autoSizingCheck2"%>
      <%= f.label :remember_me ,class: "form-check-label", for: "autoSizingCheck2" %>
      </div>
    </div>
  <% end %>

   <div class="col-auto my-1">
    <%= f.submit "Log in", class:"btn btn-primary" %>
  </div>
<% end %>

<div class="col-auto my-1">
  <%= render "devise/shared/links" %>
</div>
