<nav class="navbar navbar-dark bg-dark">Sign up </nav>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "was-validated" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  
  <div class="col-sm-3 my-1">
    <%= f.label :first_name , class:"sr-only" %><br />
    <%= f.text_field :first_name, autofocus: true , type:"text", class:"form-control", placeholder:"First Name" ,required: true%>
  </div>
  <div class="col-sm-3 my-1">
    <%= f.label :last_name , class:"sr-only" %><br />
    <%= f.text_field :last_name, type:"text", class:"form-control", placeholder:"Last Name",required: true%>
  </div>
   <div class="col-sm-3 my-1">
    <%= f.label :email ,class:"sr-only"%><br />
    <div class="input-group">
      <div class="input-group-prepend">
        <div class="input-group-text">@</div>
      </div>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" ,class:"form-control", placeholder: "Email",required: true%>
    </div>
  </div>

  <div class="col-sm-3 my-1">
    <%=f.label :password, class:"sr-only" %>  
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class:"form-control", placeholder:"Password",required: true%>
  </div>

  <div class="col-sm-3 my-1">
    <%=f.label :password_confirmation, class:"sr-only"%><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" , class:"form-control", placeholder:"Confirm Password" %>
    <div id="password-match-feedback" class="valid-feedback" style="display: none;">Passwords match.</div>
    <div id="password-not-match-feedback" class="invalid-feedback" style="display: none;">Passwords do not match.</div>
  </div>
  </div>

  <div class="col-sm-3 my-1">
    <%= f.submit "Sign up", class:"btn btn-primary" %>
  </div>
    <script>
      document.addEventListener("DOMContentLoaded", function() {
        var passwordField = document.querySelector("#<%= f.object_name %>_password");
        var passwordConfirmationField = document.querySelector("#<%= f.object_name %>_password_confirmation");

        function updatePasswordFeedback() {
          if (passwordField.value === passwordConfirmationField.value) {
            document.querySelector("#password-match-feedback").style.display = "block";
            document.querySelector("#password-not-match-feedback").style.display = "none";
          } else {
            document.querySelector("#password-match-feedback").style.display = "none";
            document.querySelector("#password-not-match-feedback").style.display = "block";
          }
        }

        passwordField.addEventListener("input", updatePasswordFeedback);
        passwordConfirmationField.addEventListener("input", updatePasswordFeedback);
      });
      </script>
<% end %>

<div class="col-sm-3 my-1">
  <%= render "devise/shared/links" %>
</div>

